[
  {
    "context": "Workspace",
    "bindings": {
    }
  },
  {
    "context": "Editor && vim_mode == normal",
  "bindings": {
      //"cmd-t": "workspace::NewTerminal",
      "cmd-s n": "workspace::NewTerminal",
      "cmd-s x": "pane::CloseActiveItem",
      "cmd-s :": "pane::SplitRight",
      "cmd-s ;": "pane::SplitDown",
      "cmd-s h": "workspace::ActivatePaneLeft",
      "cmd-s l": "workspace::ActivatePaneRight",
      "cmd-s j": "workspace::ActivatePaneDown",
      "cmd-s k": "workspace::ActivatePaneUp",
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",
      // "shift-j": "pane::SwapItemLeft",
      // "shift-k": "pane::SwapItemRight",
      "shift-q": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "escape": ["workspace::SendKeystrokes", "cmd-s escape"]
    }
  }
]
